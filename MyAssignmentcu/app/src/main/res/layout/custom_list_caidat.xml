<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/imgview_caidat_custom"
        android:src="@drawable/money" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0e0e0e"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvbig_custom_caidat"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgview_caidat_custom"
        android:layout_toEndOf="@+id/imgview_caidat_custom"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0e0e0e"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvsmall_custom_caidat"
        android:layout_alignBottom="@+id/tvbig_custom_caidat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="20dp" />
</RelativeLayout>

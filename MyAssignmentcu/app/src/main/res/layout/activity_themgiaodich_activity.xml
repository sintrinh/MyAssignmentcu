<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/lbltk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tài Khoản"
        android:textColor="#0e0e0e"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spntk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lbltk"
        android:background="@drawable/spinner"
        android:entries="@array/tai_khoan"


        />

    <TextView
        android:id="@+id/lblgd"
        android:textColor="#0e0e0e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spntk"
        android:text="Loại Giao Dịch"

        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spngd"
        android:background="@drawable/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lblgd"


        />

    <TextView
        android:id="@+id/lblsotien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spngd"
        android:text="Số tiền"
        android:textColor="#0e0e0e"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtsotien"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblsotien"
        android:hint="Nhập số tiền"
        android:textSize="12sp" />

    <TextView
        android:textColor="#0e0e0e"
        android:id="@+id/lbllydo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtsotien"
        android:text="Lý do"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/txtlydo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbllydo"

        android:hint="Nhập lý do giao dịch"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lblphannhom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtlydo"
        android:textColor="#0e0e0e"
        android:text="Phân Nhóm"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spnphannhom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lblphannhom"
        android:background="@drawable/spinner"

        />

    <TextView
        android:id="@+id/lbltrangthai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0e0e0e"
        android:layout_below="@+id/spnphannhom"
        android:text="Trạng thái giao dịch"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spntrangthai"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lbltrangthai"
        android:entries="@array/trang_thai"
        android:background="@drawable/spinner"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lblngay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spntrangthai"
        android:text="Ngày giao dịch"
        android:textColor="#0e0e0e"

        android:textSize="12sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblngay"
        android:text="Chọn DaTe/Times"
        android:textColor="#0e0e0e"
        android:background="@drawable/button"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="#0e0e0e"
        android:layout_below="@+id/lblngay"
        android:layout_toRightOf="@+id/btn1"
        android:text="Hiện Tại"
        android:background="@drawable/button"
        android:layout_alignParentRight="true"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:layout_gravity="center"
        android:textColor="#0e0e0e"
        android:hint="Thời gian" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:textColor="#0e0e0e"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:hint="Ngày Tháng Năm" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="150dp"
        android:textColor="#0e0e0e"
        android:background="@drawable/button1"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:layout_alignParentBottom="true"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Đóng"
        android:background="@drawable/button1"
        android:textColor="#0e0e0e"
        android:textSize="15sp" />

</RelativeLayout>